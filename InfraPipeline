pipeline {
      agent {
        label 'jenkins-agent'
    }
    
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Terraform Init') {
            steps {
                dir('Infra') {
                    sh 'terraform init'
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                dir('Infra') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }
        
        stage('Approval') {
            steps {
                input message: 'Apply the terraform plan?'
            }
        }
        
        stage('Terraform Apply') {
            steps {
                dir('Infra') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }
    
    post {
        always {
            // Use a node block within the post section to ensure the proper context is provided
            node('jenkins-agent') {
                dir('Infra') {
                    sh 'terraform output'
                }
            }
        }
    }
}

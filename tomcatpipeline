pipeline {
    agent {
        label 'jenkins-agent'
    }

    tools {
        maven 'Maven 3' // Use the name you provided in the Global Tool Configuration
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'feature/userlogin', url: 'https://github.com/shreyaNn/javatomcat.git'
            }
        }
        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy to Tomcat') {
            steps {
                sh 'cp target/login-web-app-1.0-SNAPSHOT.war /usr/local/tomcat/webapps/'
            }
        }
    }
}
